<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_saved_scores_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding">

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_padding"
        android:text="@string/PlayerName"
        android:textStyle="bold"
        android:tooltipText="Playername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ResScore"
        android:tooltipText="ResScore"
        app:layout_constraintStart_toStartOf="@id/tvPlayerName"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerName" />

    <TextView
        android:id="@+id/tvDeathScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_padding"
        android:text="@string/DeathScore"
        android:tooltipText="DeathScore"
        app:layout_constraintStart_toEndOf="@id/tvResScore"
        app:layout_constraintTop_toTopOf="@id/tvResScore" />

    <TextView
        android:id="@+id/tvGenScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_padding"
        android:text="@string/GenScore"
        android:tooltipText="GenScore"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_padding"
        android:text="@string/Date"
        android:textStyle="italic"
        android:tooltipText="Date"
        app:layout_constraintStart_toEndOf="@id/tvPlayerName"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>